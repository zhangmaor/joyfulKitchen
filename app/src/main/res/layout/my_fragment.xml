<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:padding="0dp"
	android:background="#F5F5F5">



	<com.app.joyfulkitchen.util.MyTitleLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</com.app.joyfulkitchen.util.MyTitleLayout>

	<LinearLayout
		android:id="@+id/info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:background="#FFFFFFFF"
		android:layout_marginTop="1dp"
		android:orientation="horizontal">
		<com.app.joyfulkitchen.util.RoundImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:scaleType="centerInside"
			android:src="@mipmap/my_qq"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="初夏忘忧之旅"/>
			<LinearLayout
				android:id="@+id/modify_data"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="15dp"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					android:text="修改资料"/>
				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="3dp"
					android:src="@mipmap/modify_data"/>
			</LinearLayout>
		</LinearLayout>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="13dp"
			android:layout_marginLeft="175dp"
			android:src="@mipmap/previous_item"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="1dp"
		android:paddingTop="5dp"
		android:background="#FFFFFFFF"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:text="今天所需的热量"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="200dp"
			android:layout_marginTop="10dp"
			android:src="@mipmap/my_yx" />
	</LinearLayout>

</LinearLayout>
