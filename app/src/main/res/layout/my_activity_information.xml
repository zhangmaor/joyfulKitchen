<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    tools:context="com.app.joyfulkitchen.activity.mychild.MyInformationActivity">

    <com.app.joyfulkitchen.util.MyTitleInfoLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.app.joyfulkitchen.util.MyTitleInfoLayout>
    <!--头像-->
    <LinearLayout
        android:id="@+id/ivHead"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <com.app.joyfulkitchen.util.RoundImageView
            android:id="@+id/roundImage_network"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/my_qq"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="更换头像"/>
    </LinearLayout>
    <!--昵称-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="昵称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="初夏忘忧之旅"/>
    </LinearLayout>
    <!--性别-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="性别"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="男"/>
    </LinearLayout>
    <!--身高-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="身高"/>
        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="170cm"/>
    </LinearLayout>
    <!--体重-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="体重"/>
        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="1997-01"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateLinearLayout"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="出生年月"/>
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="1997-01"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/city_linearLayout"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="所在城市"/>
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:text="珠海"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:background="@drawable/border"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="简介"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>
