<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal"
		android:background="@color/home_bg"
		>
		<ImageView
			android:id="@+id/home_menu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/home_menu"
			/>
		<LinearLayout
			android:id="@+id/home_edt_ly"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<EditText
				android:layout_weight="1"
				android:id="@+id/home_search_edt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:hint="@string/home_search_name"
				android:background="@drawable/home_rounded_edt"
				android:textSize="18sp"
				android:layout_gravity="center"
				android:gravity="center"
				/>
			<Button
				android:id="@+id/home_search_btn"
				android:textColor="#000000"
				android:textSize="18sp"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:background="@drawable/home_title_btn"
				android:shadowColor="#EAFCA2"
				android:text="@string/home_search_btn"
				/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/home_tv_ly"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">
			<TextView
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="35sp"
				android:typeface="serif"
				android:textStyle="bold|italic"
				android:textColor="@color/lightwhite"
				android:gravity="center"
				android:layout_gravity="center"
				android:text="joyful weigh"/>
			<ImageView
				android:id="@+id/home_search_img"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/home_search_edt"
				/>
		</LinearLayout>

	</LinearLayout>

	<!--称布局开始-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<!--显示-->
		<TextView
			android:id="@+id/home_change_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/home_bg"
			/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="234dp"
			android:background="@mipmap/home_pan_bg">
			<ImageView
				android:id="@+id/home_panel"
				android:layout_width="270dp"
				android:layout_height="270dp"
				android:src="@mipmap/home_panel"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="-60dp"
				android:layout_marginTop="20dp"/>

			<ImageView
				android:id="@+id/needle"
				android:layout_width="270dp"
				android:layout_height="270dp"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="-60dp"
				android:src="@mipmap/home_needle" />

			<TextView
				android:id="@+id/home_look_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:layout_marginTop="190dp"
				android:textSize="20sp"
				android:background="@drawable/home_rounded_tv"
				android:layout_centerHorizontal="true" />
		</RelativeLayout>
	</LinearLayout>
	<!--称布局结束-->


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="90dp"
			android:layout_height="50dp"
			android:textSize="13sp"
			android:gravity="center"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="30dp"
			android:drawableLeft="@mipmap/home_health"
			android:text="健康分析"/>

		<TextView
			android:layout_width="90dp"
			android:layout_height="50dp"
			android:textSize="13sp"
			android:gravity="center"
			android:layout_alignParentRight="true"
			android:layout_marginRight="30dp"
			android:drawableLeft="@mipmap/home_next"
			android:text="下一个"
			/>
	</RelativeLayout>

